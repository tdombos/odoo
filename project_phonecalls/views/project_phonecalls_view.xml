<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Phonecall Form View -->
    <record id="view_phonecall_with_project" model="ir.ui.view">
        <field name="name">crm.phonecall.form</field>
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm.crm_case_phone_form_view" />
        <field name="arch" type="xml">
            <field name="opportunity_id" position="after">
                <field name="project_id"/>
            </field>
        </field>
    </record>

    <!-- Phonecall Search View  -->
    <record id="view_calendar_event_search_with_project" model="ir.ui.view">
        <field name="name">crm.phonecall.search</field>
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm.view_crm_case_phonecalls_filter" />
        <field name="arch" type="xml">
            <field name="opportunity_id" position="after">
                <field name="project_id"/>
            </field>
        </field>
    </record>

    </data>
</openerp>
